<%= form_for @user do |f| %>
	
	<%= f.label :organization_id %>
	<%= f.select :organization_id, Organization.all.map {|org| [org.name, org.id]}, :include_blank => true %><br />
	
	<%= f.label :investor_id %>
	<%= f.select :investor_id, Investor.all.map {|inv| [inv.name, inv.id]}, :include_blank => true %><br />
	
	<%= f.label :company_id %>
	<%= f.select :company_id, Company.all.map {|comp| [comp.name, comp.id]}, :include_blank => true %><br />

	<%= f.label :email %>
	<%= f.text_field :email %><br />
	
	<%= f.label :first_name %>
	<%= f.text_field :first_name %><br />

	<%= f.label :last_name %>
	<%= f.text_field :last_name %><br />	
	
	<%= f.submit %>
	
<% end %>