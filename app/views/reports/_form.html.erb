<table>
	<% params.each do |key, value| %>
		<tr>
			<td><%= key %></td>
			<td><%= value %></td>
		</tr>
	<% end %>
</table>

<%= form_for [@organization, @fund, @company, @report] do |f| %>

	<div>
		<%= f.label :period %>
		<%= f.date_select :period, :discard_day => :true, :default => {:day => 1} %>
	</div>
	<div>
		<%= f.label :summary %>
 		<%= f.select( :summary_status, options_for_select(Report::STATUS.invert.to_a,  @report.summary_status), :include_blank => true ) %><br />
		<%= f.text_area :summary, :size => "110x4" %>
	</div>
	<div>
		<%= f.label :management %>
 		<%= f.select( :management_status, options_for_select(Report::STATUS.invert.to_a,  @report.management_status), :include_blank => true ) %><br />
		<%= f.text_area :management, :size => "110x4" %>
	</div>
	<div>
		<%= f.label :product %>
 		<%= f.select( :product_status, options_for_select(Report::STATUS.invert.to_a,  @report.product_status), :include_blank => true ) %><br />		
		<%= f.text_area :product, :size => "110x4" %>
	</div>	
	<div>
		<%= f.label :marketing %>
 		<%= f.select( :marketing_status, options_for_select(Report::STATUS.invert.to_a,  @report.marketing_status), :include_blank => true ) %><br />
		<%= f.text_area :marketing, :size => "110x4" %>
	</div>	
	<div>
		<%= f.label :sales %>
 		<%= f.select( :sales_status, options_for_select(Report::STATUS.invert.to_a,  @report.sales_status), :include_blank => true ) %><br />		
		<%= f.text_area :sales, :size => "110x4" %>
	</div>
	<div>
		<%= f.label :business_development %>
 		<%= f.select( :business_development_status, options_for_select(Report::STATUS.invert.to_a,  @report.business_development_status), :include_blank => true ) %><br />		
		<%= f.text_area :business_development, :size => "110x4" %>
	</div>
	<div>
		<%= f.label :competition %>
 		<%= f.select( :competition_status, options_for_select(Report::STATUS.invert.to_a,  @report.competition_status), :include_blank => true ) %><br />		
		<%= f.text_area :competition, :size => "110x4" %>
	</div>	
	<div>
		<%= f.label :finance %>
 		<%= f.select( :finance_status, options_for_select(Report::STATUS.invert.to_a,  @report.finance_status), :include_blank => true ) %><br />		
