 		<%= f.select( :legal_status, options_for_select(Report::STATUS.invert.to_a,  @report.legal_status), :include_blank => true ) %><br />		
		<%= f.text_area :legal, :size => "110x4" %>
	</div>
	<div>
		<%= f.label :other %>
 		<%= f.select( :other_status, options_for_select(Report::STATUS.invert.to_a,  @report.other_status), :include_blank => true ) %><br />		
		<%= f.text_area :other, :size => "110x4" %>
	</div>
	<%= f.submit %>
<% end %>