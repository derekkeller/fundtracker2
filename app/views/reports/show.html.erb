<h2><%= @company.name %> Reports</h2>

<%= form_tag '/reports/show_filtered', :remote => true do %>
	<div>
		<%= label_tag :report_year %>
		<%= select_year(Date.today, :field_name => :report_year) %>
	</div>
	<div>
		<%= label_tag :report_month %>
		<%= select_month(Date.today, :field_name => :report_month) %>
	</div>
		<%= submit_tag :search %>
<% end %>

<div id="report_holder">

	<%= render 'report_content' %>
	
</div>

<div class="back_footer">
	<%= link_to "Edit", edit_organization_fund_company_report_path(@organization, @fund, @company, @report) %> |
	<%= link_to "Back", organization_fund_company_reports_path(@organization, @fund, @company) %>
</div>