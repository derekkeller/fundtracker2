<div class='headers'>
	<h1><%= @investor.name %></h1>
</div>

<div class='investor_main_container'>
  <div class='investor_container'>
  	<div id='object_status'>
  		<div id='left_status'>
  			Status
  		</div>
  		<div id='right_status'>
  			<%= truncate(@investor.status, :length => 300, :omission => "...") %>
  		</div>
  	</div>
  	<div id='object'>
  		<div id='left'>
  			Stage
  		</div>
  		<div id='right'>
  			<%= @investor.stage %>
  		</div>
  	</div>
  	<div id='object'>
  		<div id='left'>
  			Potential Commitment
  		</div>
  		<div id='right'>
  			<%= nh(@investor.expected_commitment) %>
  		</div>
  	</div>
  	<div id='object'>
  		<div id='left'>
  			Probability
  		</div>
  		<div id='right'>
  			<%= @investor.probability.humanize %>
  		</div>
  	</div>
  	<div id='object'>
  		<div id='left'>
  			Total Assets
  		</div>
  		<div id='right'>
  			<%= nh(@investor.assets) %>
  		</div>
  	</div>
  	<div id='object'>
  		<div id='left'>
  			Expected Close
  		</div>
  		<div id='right'>
  			<%= @investor.expected_close %>
  		</div>
  	</div>
  	<div id='object'>
  		<div id='left'>
  			Closed Commitment
  		</div>
  		<div id='right'>
  			<%= nh(@investor.actual_commitment) %>
  		</div>
  	</div>
  </div>
  <div class='date_container'>
  	<div id='right'>
  		<strong>Address</strong><br />
  		<%= @investor.street %><br />
  		<%= "#{@investor.city}, #{@investor.state} #{@investor.zipcode}"%>
  	</div>
  </div>
</div>
<%= link_to 'Edit', edit_organization_investor_path(@organization, @investor) %> | <%= link_to "Destroy", @investor, :confirm => "Are you sure?", :method => :delete %>

<div class='temp_holder'>

	<%= render '/users/users_summary' %>

	<%= render '/tasks/tasks_summary'%>

	<%= render '/events/events_summary'%>

</div>

<div class='back_footer'>
	<%= link_to "< Back", organization_investors_path(@organization) %>
</div>


<script type="text/javascript" charset="utf-8">
	function destroy_it_now(model_name, item_id) {
		var answer = confirm('Are you sure you want to delete this?');
	  if (answer) {
			$('#' + model_name + '_' + item_id).hide();
			$.post('/' + model_name + '/' + item_id, {_method : 'delete', authenticity_token : '<%= form_authenticity_token %>'});
		} else {
			return false
		}
	}	
</script>