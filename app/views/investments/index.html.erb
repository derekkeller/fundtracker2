<h2><%= @company.name %> Investments</h2>

<table style="width:1000px; text-align:right">
	<tr>
		<th>Date</th>
		<th>Name</th>
		<th>Security</th>
		<th>H12 Investment Amount</th>
		<th>Pre-Money</th>
		<th>Total Raise</th>
		<th>Post-Money</th>
		<th>Liquidation Pref</th>
		<th>FD Own %</th>
		<th>Pref Own %</th>
	</tr>
	<% @investments.each do |inv| %>
	<tr>
		<td><%= inv.date %></td>
		<td><%= link_to inv.name, organization_fund_company_investment_path(@organization, @fund, @company, inv.id) %></td>
		<td><%= inv.security_type %></td>
		<td><%= nh(inv.investment_amount) %></td>
		<td><%= nh(inv.pre_money) %></td>
		<td><%= nh(inv.capital_raised) %></td>
		<td><%= nh(inv.post_money) %></td>
		<td><%= inv.liquidation_preference %></td>
		<td><%= ph(inv.fully_diluted_ownership) %></td>
		<td><%= ph(inv.preferred_ownership) %></td>
	</tr>
	<% end %>
</table>


<div class='back_footer'>
	<%= link_to 'Add Investment', new_organization_fund_company_investment_path(@organization, @fund, @company) %> |
	<%= link_to 'Back', organization_fund_company_path(@organization, @fund, @company) %>
</div>