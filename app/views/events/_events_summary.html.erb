<div class='headers'>
	<h2>Events</h2>
</div>

<table class="right" style="width:1000px">
  <tr class="theight theader bold">
			<th class='left'>Date</th>
			<th class='left'>Name</th>
			<th class='left'>Type</th>
			<th class='left'>Notes</th>
			<th class='left'>Investor ID</th>
			<th class='left'>Created By</th>
			<th></th>
			<th></th>			
		</tr>
		<% @investor.events.each do |event| %>
		<tr class="theight">
			<td class='left'><%= event.date %></td>
			<td class='left'><%= link_to event.name, organization_investor_event_path(@organization, @investor, event) %></td>
			<td class='left'><%= event.event_type %></td>
			<td class='left'><%= truncate(event.notes, :length => 50, :omission => "...") %></td>
			<td class='left'><%= event.investor.name %></td>
			<td class='left'><%= event.user.first_name rescue 'Created By' %></td>
			<td class='left'><%= link_to 'Edit', edit_organization_investor_event_path(@organization, @investor, event) %></td>
			<td class='left'><%= link_to_function 'Destroy', "destroy_it_now('events', #{event.id.to_s})" %></td>
		</tr>
		<% end %>
	</table>

<br />
<%= link_to "Add Event", new_organization_investor_event_path(@organization, @investor) %>