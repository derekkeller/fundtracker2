<div class='headers'>
	<h1><%= @event.name %></h1>
</div>

	<div id='task_main'>
		<div id='task_left'>
			<div id='task_left_box'>
				<div id='task_item'>Date</div>
				<div id='task_item_detail'><%= @event.date.to_s(:clean) %></div>
			</div>
			<div id='task_left_box'>
				<div id='task_item'>Event Type</div>
				<div id='task_item_detail'><%= @event.event_type.humanize %></div>
			</div>
			<div id='task_left_box'>
				<div id='task_item'>Created By</div>
				<div id='task_item_detail'><%= @event.user.to_s %></div>
			</div>
			<div id='task_left_box'>
				<div id='task_item'>Investors Present</div>
				<div id='task_item_detail'>
					<ul>
						<% @event.attendees.investors.each do |attendee| %>							
							<li><%= attendee.to_s %></li>
						<% end %>
					</ul>
				</div>
			</div>
			<div id='task_left_box'>
				<div id='task_item'>H12 Team Present</div>
				<div id='task_item_detail'>
					<ul>
						<% @event.attendees.employees.each do |attendee| %>							
							<li><%= attendee.to_s %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
		<div id='task_right'>
			<%= @event.notes %>
		</div>
	</div>
		
<br />
<%= link_to 'Edit', edit_organization_investor_event_path(@organization, @investor) %> |
<%= link_to 'Destroy', @event, :confirm => 'Are you sure?', :method => :delete %>

<div class='back_footer'>
	<%= link_to "Back to #{@investor.name}", organization_investor_path(@organization, @investor) %>
</div>